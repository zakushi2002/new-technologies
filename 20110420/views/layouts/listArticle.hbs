<div class="container">
  <h1 class="mb-4">Blog Articles</h1>
  <a href="articles/new" class="btn btn-success">New Article</a>
</div>
{{#if message}}
  <div class="alert alert-success" role="alert">
    {{message}}
  </div>
{{/if}}
{{#each postList}}
  {{#each this}}
    <div class="card mt-4">
      <div class="card-body">
        <h4 class="card-title">{{this.title}}</h4>
        <div class="card-subtitle text-muted mb-2">
          {{this.createdDate}}
          {{! .toLocaleDateString() }}
        </div>
        <div class="card-subtitle text-muted mb-2">
          Author:
          {{this.author}}
        </div>
        <div class="card-text mb-2">{{this.content}}</div>
        <a href="articles/{{this.id}}" class="btn btn-primary">Read More</a>
        <a href="articles/update/{{this.id}}" class="btn btn-info">Edit</a>
        <form
          action="articles/delete/{{this.id}}"
          method="GET"
          class="d-inline"
        >
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
  {{/each}}
{{/each}}